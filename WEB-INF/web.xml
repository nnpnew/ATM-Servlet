<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<welcome-file-list>
		<welcome-file>Login.html</welcome-file>
  </welcome-file-list>

	<servlet>
			<servlet-name>LoginServlet</servlet-name>
			<servlet-class>LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>LoginServlet</servlet-name>
			<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
			<servlet-name>TransferServlet</servlet-name>
			<servlet-class>TransferServlet</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>TransferServlet</servlet-name>
			<url-pattern>/TransferServlet</url-pattern>
	</servlet-mapping>

	<servlet>
			<servlet-name>ConfirmTransferServlet</servlet-name>
			<servlet-class>ConfirmTransferServlet</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>ConfirmTransferServlet</servlet-name>
			<url-pattern>/ConfirmTransferServlet</url-pattern>
	</servlet-mapping>

	<servlet>
			<servlet-name>ConfirmLoanServlet</servlet-name>
			<servlet-class>ConfirmLoanServlet</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>ConfirmLoanServlet</servlet-name>
			<url-pattern>/ConfirmLoanServlet</url-pattern>
	</servlet-mapping>

	<servlet>
			<servlet-name>LoanServlet</servlet-name>
			<servlet-class>LoanServlet</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>LoanServlet</servlet-name>
			<url-pattern>/LoanServlet</url-pattern>
	</servlet-mapping>

	<servlet>
			<servlet-name>Statement</servlet-name>
			<servlet-class>Statement</servlet-class>
	</servlet>

	<servlet-mapping>
			<servlet-name>Statement</servlet-name>
			<url-pattern>/Statement</url-pattern>
	</servlet-mapping>
</web-app>
